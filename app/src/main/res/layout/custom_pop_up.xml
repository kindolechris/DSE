<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_white_round">

        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:background="@drawable/top_pop_up_header"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtcompanyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRDB"
                    android:layout_gravity="left"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:fontFamily="@font/montserrat"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27/01/2019"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhiteForText"
                    android:fontFamily="@font/montserrat"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    android:textSize="12dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LDV"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:textSize="14dp"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LTQ"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_gravity="right"
                    android:textColor="@color/colorBlack"
                    android:gravity="right"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtlastdealvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12,000"
                    android:layout_gravity="left"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
                <TextView
                    android:id="@+id/lasttradequality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24,000"
                    android:layout_weight="1"
                    android:textSize="10dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textSize="14dp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Volume"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:layout_weight="1"
                    android:textSize="14dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtchange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10%"
                    android:layout_gravity="left"
                    android:textSize="10dp"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
                <TextView
                    android:id="@+id/txtvolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:textSize="10dp"
                    android:gravity="right"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_upward_green_24dp">
                        </ImageView>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="High"
                                android:textColor="@color/colorBlack"
                                android:textSize="18dp">
                            </TextView>
                            <TextView
                                android:id="@+id/txthigh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1200"
                                android:textSize="14dp">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="2dp"
                        android:background="@color/colorWhiteForText"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_arrow_downward_red_24dp">
                        </ImageView>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low"
                                android:textColor="@color/colorBlack"
                                android:textSize="18dp">
                            </TextView>
                            <TextView
                                android:id="@+id/txtlow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textSize="14dp">
                            </TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutclose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:onClick="closeModal"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/btnclose"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="Close" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>